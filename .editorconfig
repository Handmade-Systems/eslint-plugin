root = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
insert_final_newline = true

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Powershell files
[*.ps1]
indent_size = 2

# Shell script files
[*.sh]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*]
# Don't use tabs for indentation.
indent_size = 2
indent_style = space
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

end_of_line = lf
